@model List<NotifyListViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@if (Model.Count > 0)
{
    <div class="container-fluid">
        @foreach (var notify in Model)
        {
            <form method="post" asp-action="Index" class="my-1">
                <input type="hidden" name="id" value="@notify.Id" />
                <div class="col-lg-12 mb-4">
                    <div class="card bg-secondary text-white shadow">
                        <div class="card-body">
                            @notify.Description   - <button type="submit" class="btn btn-info btn-sm float-right">Okundu</button>
                        </div>
                    </div>
                </div>
            </form>

        }

    </div>
}
else
{
    <div class="col-lg-12 mb-4">
        <div class="card bg-success text-white shadow">
            <div class="card-body">
                Okunmamış Bildiriminiz Bulunmamaktadır.
            </div>
        </div>
    </div>
}
