
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
        <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
    </div>

    <!-- Content Row -->
    <div class="row">

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Atanmayı Bekleyen Görev Sayısı</div>
                            @if (ViewBag.NotAssignWorkCount < 1)
                            {
                                <div class="h5 mb-0 font-weight-bold text-black-50">Atama bekleyen göreviniz bulunmamaktadır</div>
                            }
                            else
                            {
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.NotAssignWorkCount</div>
                            }
                        </div>
                        <div class="col-auto">
                            <a class="fas fa-pen fa-2x text-warning" asp-action="Index" asp-controller="WorkOrder" title="Atama sekmesine git"></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Tamamlanmış Görev Sayısı</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.FinishedWorkCount</div>

                        </div>
                        <div class="col-auto">
                            <a class="fas fa-check fa-2x text-success" title="İncelemek için Tıklayınız" asp-action="Index" asp-controller="Work"></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Okunmamış Bildirim Sayısı</div>
                            <div class="row no-gutters align-items-center">
                                <div class="col-auto">
                                    <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">@ViewBag.UnReadNotifyCount</div>
                                </div>

                            </div>
                        </div>
                        <div class="col-auto">
                            <a class="fas fa-life-ring fa-2x text-gray-300" title="Bildirimlere gitmek için Tıkla" asp-action="Index" asp-controller="Notify"></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Toplam Yazılan Rapor Sayısı</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.ReportCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-tasks fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>





</div>
