@model WorkListAllViewModel

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
    <div class="container-fluid">
        @if (Model.Reports.Count > 0)
        {
            <a asp-action="GetExcel" asp-route-id="@Model.Id" target="_blank" class="btn btn-outline-success mt-2 my-2 mr-2"> <i class="fas fa-file-excel mr-2"></i> Excel</a>
            <a asp-route-id="@Model.Id" asp-action="GetPdf" target="_blank" class="btn btn-outline-danger mt-2 my-2 mr-2"> <i class="fas fa-file-archive mr-2"></i> PDF</a>
            <table class="table table-hover table-sm mt-2 text-center table-bordered">
                <tr>
                    <th colspan="2"><strong>@Model.AppUser.Name @Model.AppUser.Surname</strong> personeli @Model.WorkName görevine yazmış olduğu raporlar</th>
                </tr>
                <tr>
                    <th>Tanım</th>
                    <th>Detay</th>
                </tr>
                @foreach (var item in Model.Reports)
                {
                    <tr>
                        <td>@item.ReportTitle</td>
                        <td>@item.ReportDescription</td>
                    </tr>
                }
            </table>
        }
        else
        {
            <div class="border border-dark mt-2 text-center">
                @Model.AppUser.Name @Model.AppUser.Surname personeliniz şu anda @Model.WorkName görevi üzerinde çalışıyor . <strong>Henüz Bir Rapor Yazılmamış.</strong>
            </div>
        }
    </div>