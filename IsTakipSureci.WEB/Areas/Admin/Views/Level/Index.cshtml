@model List<LevelViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">

    @if (Model.Count != 0)
    {
        <table class="table table-sm table-hover">
            <thead>
                <tr>
                    <th>İş Aciliyet Tanımı </th>
                    <th>Düzenle</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Tanim</td>
                        <td><a asp-action="LevelEdit" asp-controller="Level" class="btn btn-sm btn-info my-2" asp-route-id="@item.Id"><span class="fa fa-edit fa-sm"></span></a></td>
                    </tr>
                }

            </tbody>

        </table>

    }
    else
    {
        <div class="text-center lead mt-4">
            <strong>Sistemde Kayıtlı Aciliyet Bulunamadı .</strong><br />
            <a asp-action="LevelAdd" asp-controller="Level" class="btn btn-sm btn-info my-2">Yeni Aciliyet Ekle</a>
        </div>
    }

</div>