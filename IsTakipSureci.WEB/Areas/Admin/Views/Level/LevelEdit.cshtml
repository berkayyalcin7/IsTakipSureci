@model LevelEditViewModel

@{
    ViewData["Title"] = "LevelEdit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid">


    <form asp-action="LevelEdit" class="w-75 mx-auto p-3" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Tanim"></label>
            <span asp-validation-for="Tanim" class="text-danger"></span>
            <input type="text" asp-for="Tanim" class="form-control" />
        </div>
        <button type="submit" class="btn btn-sm btn-success"> <i class="fas fa-edit mr-2"></i> Düzenle</button>


    </form>



</div>


@section Scripts{

    <script src="~/jquery-validate/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

}