@model WorkAddViewModel

@{
    ViewData["Title"] = "WorkAdd";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<form asp-action="WorkAdd" method="post" class="w-75 mx-auto p-3">

    <div class="form-group">
        <label>İş Tanımı : </label>
        <span asp-validation-for="WorkName" class="text-warning"></span>
        <input type="text" asp-for="WorkName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Açıklama : </label>
        <span asp-validation-for="Description" class="text-warning"></span>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Aciliyet Durumu Seçiniz : </label>
        <span asp-validation-for="LevelId" class="text-danger"></span>

        <select asp-for="LevelId" class="form-control" asp-items="ViewBag.Aciliyetler">

            <option disabled value="-1">Bir Aciliyet Durumu Seçiniz</option>


        </select>
    </div>

    <button type="submit" class="btn btn-success btn-sm"> <i class="fas fa-check mr-2"></i> Kaydet</button>


</form>

@section Scripts{

    <script src="~/jquery-validate/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

}
