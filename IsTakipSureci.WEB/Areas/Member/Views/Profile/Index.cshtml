@model AppUserListViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}


<form asp-action="Index" method="post" class="w-75 mx-auto p-3" enctype="multipart/form-data">

    @if (TempData["Mesaj"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Sonuç : </strong> @TempData["Mesaj"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Surname"></label>
        <span asp-validation-for="Surname" class="text-danger"></span>
        <input asp-for="Surname" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <span asp-validation-for="Email" class="text-danger"></span>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <div class="row">
            <div class="col-md-4">
                <h5>Şu an ki resminiz</h5>
                <img src="~/img/@Model.Picture" style="height:10rem!important;" alt="@Model.Name" />
            </div>
            <div class="col-md-8">
                <div id="alanOnizleme" style="display:none !important;">
                    <h5 style="font-weight:700;">Seçtiğiniz Resim</h5>
                    <img id="resimOnizleme" src="" class="w-160" style="height:160px !important;" />
                </div>
            </div>

            <div class="col-md-12">
                <label>Resim Seç :</label>
                <input type="file" name="Resim" id="Resim" class="form-control-file" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info btn-sm mt-2"> <i class="fas fa-check mr-2"></i> Kaydet</button>
    </div>



</form>
@section Scripts {

    <script>
        $(document).ready(function () {
            $("#Resim").change(function (e) {
                $("#alanOnizleme").show();
                $("#resimOnizleme").attr('src', URL.createObjectURL(e.target.files[0]));
            });
        });
    </script>

}